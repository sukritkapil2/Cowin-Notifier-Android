<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cowicheck.cowinnotifier">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CowinNotifier">
        <service android:name=".Services.CheckSlotService" android:enabled="true" android:exported="true"/>
        <activity android:name=".NotifyActivity"
            android:label="Cowin Notifications"></activity>
        <activity
            android:name=".DashboardActivity"
            android:label="User Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LandingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>