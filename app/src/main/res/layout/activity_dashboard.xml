<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:id="@+id/main_layout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/head1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Place"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/cowin_blue"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No place selected. Enter a PIN or choose a district to get started."
                android:layout_below="@id/head1"
                android:layout_marginTop="20sp"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_light">
            </TextView>

            <Button
                android:id="@+id/add_place"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_below="@id/info"
                android:layout_marginTop="20dp"
                android:text="Add Place"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_bold"
                >
            </Button>

            <LinearLayout
                android:id="@+id/after_place_added"
                android:layout_width="match_parent"
                android:layout_below="@id/add_place"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <Button
                    android:id="@+id/notify_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/green_btn"
                    android:text="Notify Me"
                    android:drawableLeft="@drawable/ic_baseline_notifications_active_24"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_weight="1"
                    >
                </Button>
                <View
                    android:id="@+id/empty_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/view_slots_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_below="@id/notify_btn"
                    android:backgroundTint="@color/green_btn"
                    android:text="View Slots"
                    android:drawableLeft="@drawable/ic_baseline_library_books_24"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_weight="1"
                    >
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slots"
                android:layout_below="@id/after_place_added"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/slot_info"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Loading Data. Please Wait"
                    android:textSize="16sp"
                    android:id="@+id/loading_text"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"></TextView>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/slot_table_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/scroll_table"
                            android:layout_below="@id/slot_table_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </LinearLayout>
                    </RelativeLayout>

                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/update_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/after_place_added"
                android:layout_marginTop="20sp"
                android:background="@drawable/shape"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Place Details"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp">
                </TextView>
                <RadioGroup
                    android:id="@+id/radio_grp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <RadioButton
                        android:id="@+id/pinbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PIN"
                        android:fontFamily="@font/montserrat_light"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:checked="true"
                        >
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/districtbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DISTRICT"
                        android:fontFamily="@font/montserrat_light"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20sp"
                        >
                    </RadioButton>
                </RadioGroup>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pin_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter PIN code"
                    android:layout_marginTop="10dp"
                    app:boxStrokeColor="@color/teal_200"
                    app:boxStrokeWidthFocused="1dp"
                    android:textColorHint="@color/light_grey"
                    app:hintTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pin_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:id="@+id/state_text"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp">
                </TextView>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/spinner_bg">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/state_menu"
                    android:visibility="gone"
                    android:dropDownSelector="@color/teal_200"
                    android:spinnerMode="dropdown"
                    ></Spinner>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:id="@+id/district_text"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp">
                </TextView>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/spinner_bg">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/district_menu"
                        android:visibility="gone"
                        android:dropDownSelector="@color/teal_200"
                        android:spinnerMode="dropdown"
                        ></Spinner>
                </FrameLayout>
                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Date: "
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <Button
                    android:id="@+id/date_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Date"
                    android:backgroundTint="@color/teal_200"
                    android:layout_marginTop="10dp"
                    app:icon="@drawable/ic_baseline_calendar_today_24"
                    >
                </Button>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">
                    <Button
                        android:id="@+id/update_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="Update"
                        android:drawableTint="@color/cowin_blue"
                        android:textColor="@color/cowin_blue"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/ic_baseline_done_all_24"
                        app:rippleColor="@color/teal_200"
                        android:layout_weight="1">
                    </Button>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <Button
                        android:id="@+id/close_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="Close"
                        android:textColor="@color/cowin_blue"
                        android:textAllCaps="false"
                       android:drawableLeft="@drawable/ic_baseline_close_24"
                        app:rippleColor="@color/teal_200"
                        android:layout_weight="1">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_help_24"
        android:tint="@color/white"
        app:tint="@color/white"
        android:id="@+id/help_fab"
        android:backgroundTint="@color/cowin_blue"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        ></com.google.android.material.floatingactionbutton.FloatingActionButton>
</RelativeLayout>